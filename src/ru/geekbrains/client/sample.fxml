<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?scenebuilder-stylesheet / css/Style.css?>
<?import java.net.URL?>

<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.ListView?>
<VBox fx:controller="ru.geekbrains.client.Controller" xmlns:fx="http://javafx.com/fxml" alignment="CENTER">
    <stylesheets><URL value = "@/ css/Style.css"/></stylesheets>

    <HBox fx:id="upperPanel">
        <TextField HBox.hgrow="ALWAYS" promptText="Логин" fx:id="loginField"/>
        <PasswordField promptText="Пароль" fx:id="passwordField" onAction="#tryToAuth"/>
        <Button text="Авторизоваться" onAction="#tryToAuth"/>
    </HBox>

    <HBox VBox.vgrow="ALWAYS">
        <VBox fx:id="vBoxChat" HBox.hgrow="ALWAYS"/>
        <ListView fx:id="clientList" managed="false" visible="false"/>
    </HBox>

    <HBox fx:id="bottomPanel" managed="false" visible="false">
        <TextField fx:id="textField" HBox.hgrow="ALWAYS" promptText="Введите сообщение" onAction="#sendMessage"/>
        <Button fx:id="btn1" text="Send Msg" onAction="#sendMessage"/>
    </HBox>

</VBox>

